{
  "name": "plutchik-legacy",
  "strict": false,
  "schema": {
    "type": "object",
    "properties": {
      "analysis_metadata": {
        "type": "object",
        "properties": {
          "text_length": { "type": "integer", "minimum": 0 },
          "analysis_timestamp": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}$"
          },
          "dominant_emotions": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 3,
            "maxItems": 3
          },
          "overall_emotional_tone": { "type": "string" },
          "confidence_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "required": [
          "text_length",
          "analysis_timestamp",
          "dominant_emotions",
          "overall_emotional_tone",
          "confidence_score"
        ]
      },
      "part1_basic_emotions": {
        "type": "object",
        "properties": {
          "joy": { "type": "number", "minimum": 0, "maximum": 1 },
          "trust": { "type": "number", "minimum": 0, "maximum": 1 },
          "fear": { "type": "number", "minimum": 0, "maximum": 1 },
          "surprise": { "type": "number", "minimum": 0, "maximum": 1 },
          "sadness": { "type": "number", "minimum": 0, "maximum": 1 },
          "disgust": { "type": "number", "minimum": 0, "maximum": 1 },
          "anger": { "type": "number", "minimum": 0, "maximum": 1 },
          "anticipation": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "required": [
          "joy",
          "trust",
          "fear",
          "surprise",
          "sadness",
          "disgust",
          "anger",
          "anticipation"
        ]
      },
      "part2_intensity_levels": {
        "type": "object",
        "properties": {
          "joy": { "$ref": "#/definitions/intensityObject" },
          "trust": { "$ref": "#/definitions/intensityObject" },
          "fear": { "$ref": "#/definitions/intensityObject" },
          "surprise": { "$ref": "#/definitions/intensityObject" },
          "sadness": { "$ref": "#/definitions/intensityObject" },
          "disgust": { "$ref": "#/definitions/intensityObject" },
          "anger": { "$ref": "#/definitions/intensityObject" },
          "anticipation": { "$ref": "#/definitions/intensityObject" }
        },
        "required": [
          "joy",
          "trust",
          "fear",
          "surprise",
          "sadness",
          "disgust",
          "anger",
          "anticipation"
        ]
      },
      "part3_emotional_dyads": {
        "type": "object",
        "properties": {
          "primary_dyads": { "$ref": "#/definitions/dyadCategory" },
          "secondary_dyads": { "$ref": "#/definitions/dyadCategory" },
          "tertiary_dyads": { "$ref": "#/definitions/dyadCategory" }
        },
        "required": ["primary_dyads", "secondary_dyads", "tertiary_dyads"]
      },
      "analysis_summary": {
        "type": "object",
        "properties": {
          "key_findings": {
            "type": "array",
            "items": { "type": "string" }
          },
          "emotional_complexity": { "type": "string" },
          "notable_patterns": {
            "type": "array",
            "items": { "type": "string" }
          },
          "recommendations": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": [
          "key_findings",
          "emotional_complexity",
          "notable_patterns",
          "recommendations"
        ]
      }
    },
    "required": [
      "analysis_metadata",
      "part1_basic_emotions",
      "part2_intensity_levels",
      "part3_emotional_dyads",
      "analysis_summary"
    ],
    "definitions": {
      "intensityObject": {
        "type": "object",
        "properties": {
          "mild": { "type": "number", "minimum": 0, "maximum": 1 },
          "moderate": { "type": "number", "minimum": 0, "maximum": 1 },
          "intense": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "required": ["mild", "moderate", "intense"]
      },
      "dyadCategory": {
        "type": "object",
        "additionalProperties": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  }
}
